<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.paint.CanvasView
        android:id="@+id/drawField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#AA5959"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeModeBtn" />

    <Button
        android:id="@+id/changeModeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChangeMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scaleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1X"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/drawField"
        app:layout_constraintEnd_toStartOf="@+id/changeModeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>